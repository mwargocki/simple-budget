{
  "permissions": {
    "defaultMode": "default",
    "allow": [
      "Edit(src/**)",
      "Edit(tests/**)",
      "Write(src/**)",
      "Write(tests/**)",
      "Bash(npm run dev:*)",
      "Bash(npm run test:*)",
      "Bash(npm run lint)",
      "Bash(npm run format)",
      "WebFetch(domain:github.com)"
    ],
    "ask": ["Bash(git commit:*)", "Bash(git push:*)"],
    "deny": ["Read(./.env)", "Read(./.env.*)", "Read(./secrets/**)"]
  }
}
